<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @article.title %>
</p>

<p>
  <b>Text:</b>
  <%= @article.text %>
</p>

<p>
  <b>Url:</b>
  <%#= @article.url %>
  <%= link_to truncate(@article.url, length:40), @article.url, {:target => "_blank"} %>
</p>

<p>
  <b>Genre:</b>
  <%#= @article.url %>
	<% if @article.genre != nil %>
  		<%= @article.genre.id %>
	<% else %>
		No entry
	<% end %>
</p>

<p>
  <b>Memos:</b><br />
  <% if @memos.length > 0 %>
  	<% @memos.each_with_index do |memo, i| %>
  		&lt;Memo <%= i + 1 %>&gt;<br />
  		<%= memo.text %><br />
  	<% end %>
  <% else %>
  	No memo
  <% end %>
</p>


<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>&nbsp;&nbsp;|&nbsp;
<%= link_to 'Destroy', @article, confirm: 'Are you sure?', method: :delete, style: "color: red;" %>


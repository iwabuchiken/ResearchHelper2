<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @article.title %>
</p>

<p>
  <b>Text:</b>
  <%= @article.text %>
</p>

<p>
  <b>Url:</b>
  <%#= @article.url %>
  <%= link_to truncate(@article.url, length:40), @article.url, {:target => "_blank"} %>
</p>

<p>
  <b>Genre:</b>
  <%#= @article.url %>
	<% if @article.genre != nil %>
  		<%= @article.genre.id %>
	<% else %>
		No entry
	<% end %>
</p>

<p>
  <!-- <b>Memos:</b><br /> -->
  <dl class="accordion"><b>Memos:</b><br />
  
	  <% if @memos.length > 0 %>
	  	<% @memos.each_with_index do |memo, i| %>
	  		<% if i == -1 %>
	  			<dt class="opened">
			<% else %>
				<dt>
			<% end %>
	  			<span style="color: green;">------------</span> 
					<%= i + 1 %>
			 	<span style="color: green;">--------------</span>
			 </dt>
			 
			<br />
			
			<dd>	 
	  			<%= memo.text %>
	  		</dd>
	  		
	  		<br />
	  		
	  	<% end %>
	  <% else %>
	  	No memo
	  <% end %>
	</dl>
</p>



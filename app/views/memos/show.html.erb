<p id="notice"><%= notice %></p>

<p><%= flash[:log_saved] %></p>

<p>
  <b>Text:</b>
  <%= @memo.text %>
</p>

<p>
  <b>Url:</b>
	<% if @memo.url.length > 0 %>
  		<%= link_to truncate(@memo.url, length:40), @memo.url, {:target => "_blank"} %>
	<% else %>
		No entry
	<% end %>
</p>

<p>
  <b>Article:</b>
	<% if @memo.article != nil %>  
		<%= link_to @memo.article.title, @memo.article %>&nbsp;(id=<%= @memo.article_id %>)
	<% else %>
		No entry
	<% end %>
</p>


<%= link_to 'Edit', edit_memo_path(@memo) %> |
<%= link_to 'Back', memos_path %>&nbsp;&nbsp;|&nbsp;
<%= link_to 'Destroy', @memo, 
			confirm: 'Are you sure?', method: :delete,
			style: "color: red;" %>
